<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/common_back_color"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".step.RunningRecordActivity"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_viw"
        android:background="@mipmap/background_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">

        <ImageView
            android:src="@mipmap/run_mode"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />

        <com.ukjava.myrunning.step.view.WaveView
            android:id="@+id/waveView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_item"
        android:layout_margin="@dimen/dp_10"
        android:layout_below="@id/ll_viw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
