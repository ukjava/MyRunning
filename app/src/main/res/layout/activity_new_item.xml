<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:padding="@dimen/dp_10"
            android:text="翻着我们的照片，想念若隐若现，去年的冬天，我们笑得很甜......\n—— 哎哟，不错哦!"
        android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_mags"
            android:padding="@dimen/dp_10"
            android:layout_below="@+id/tv_title"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tv_thumbnail_pic_s"
                android:background="@mipmap/ic_launcher"
                android:padding="@dimen/dp_1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80" />
            <ImageView
                android:id="@+id/iv_thumbnail_pic_s02"
                android:background="@mipmap/ic_launcher"
                android:padding="@dimen/dp_1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80" />
            <ImageView
                android:id="@+id/iv_thumbnail_pic_s03"
                android:background="@mipmap/ic_launcher"
                android:padding="@dimen/dp_1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_author_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/ll_mags"
            android:text="今日头条"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

</LinearLayout>
