<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/login_backgroun"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/step_user"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1" />

    <TextView
        android:textColor="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_toRightOf="@+id/step_user"
        android:layout_marginTop="@dimen/dp_20"
        android:text="跑步模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timeTextView"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="00:04:34"
        android:textSize="@dimen/dp_40" />

    <TextView
        android:id="@+id/step_km"
        android:text="0.00"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="公里"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/splan"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_200"
        android:layout_toRightOf="@+id/step_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/step_sur"
        android:text="0.00"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="千卡路里"
        android:paddingLeft="@dimen/dp_8"
        android:textColor="@color/splan"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_200"
        android:layout_toRightOf="@+id/step_sur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_280"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stepTextView"
            android:textColor="@color/splan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 步"
            android:textSize="@dimen/dp_35" />


    </RelativeLayout>


    <Button
        android:id="@+id/run_finish"
        android:text="结束"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/run_shape"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100" />


</RelativeLayout>
