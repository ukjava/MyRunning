<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1" />

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/holo_blue_dark"
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="翻着我们的照片，想念若隐若现，去年的冬天，我们笑得很甜......\n—— 哎哟，不错哦!" />


        <com.ukjava.myrunning.main.view.NineGridTestLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_marginTop="8dp"
            app:sapcing="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.ukjava.myrunning.main.view.NineGridTestLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10分钟前" />

            <ImageView
                android:id="@+id/iv_pinglun"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:src="@mipmap/coupon_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />

        </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_ll"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="username :"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_cont"
            android:text="哈哈哈！"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

    </LinearLayout>


</LinearLayout>
