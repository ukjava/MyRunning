<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:background="@mipmap/background_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/step_user"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/dp_1" />

        <TextView
            android:textColor="@color/white"
            android:padding="@dimen/dp_10"
            android:layout_toRightOf="@+id/step_user"
            android:layout_marginTop="@dimen/dp_20"
            android:text="跑步结果"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_record"
            android:src="@mipmap/medal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50" />

        <TextView
            android:id="@+id/finish_km"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_80"
            android:text="8.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:layout_below="@+id/finish_km"
            android:layout_centerHorizontal="true"
            android:text="公里数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/finish_allstep"
                android:text="135"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="步数"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_below="@+id/finish_allstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/finish_time"
                android:text="00:04:35"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="用时（分钟）"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_below="@+id/finish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/finish_sur"
                android:text="2.93"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="千卡路里"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_below="@+id/finish_sur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/tron"
        android:layout_below="@+id/rl_bg"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_100">

        <TextView
            android:id="@+id/tv_ff"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="跑步减肥方法"
            android:drawableLeft="@mipmap/tips2"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ll"
            android:layout_below="@+id/tv_ff"
            android:text="1 请保持40分钟以上的运动时间"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_ll"
            android:text="2 不要跑太快，心率保持在140-180之间"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_return"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="立即返回"
        android:textColor="@color/white" />

</RelativeLayout>